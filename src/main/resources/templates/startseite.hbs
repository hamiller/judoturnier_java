<!DOCTYPE html>
<html lang="de">
<head>
  {{> header}}
</head>
<body>
  {{> title }}
  {{> nav }}

  <div>
    <div class="bodyheader">
      <h2>Software zur Durchführung von Judo-Turnieren</h2>
    </div>
  </div>
  
  <div>
    <h1>Software des des 1.JC-Großkrotzenburg</h1>
  </div>

  <div class="bodycontent">
      {{#if turniere}}
          <div class="">Deine Turniere:</div>
          <ul class="generalcontent">
            {{#turniere}}
              <li class="listeneintrag">
                  <a href="/turnier/{{uuid}}">
                      <div>{{name}}</div>
                      <div>{{Ort}}</div>
                      <div>{{Datum}}</div>
                  </a>
              </li>
            {{/turniere}}
          </ul>
      {{else}}
            <div class="">Keine Turniere vorhanden</div>
      {{/if}}
      <md-divider></md-divider>
      {{#if isNotloggedin}}
        <md-filled-tonal-button type="button" id="loginbtn" class="" href="/oauth2/authorization/keycloak">Login</md-filled-tonal-button>
      {{/if}}
  </div>

  {{> footer}}
  <script type="text/javascript">
  </script>
</body>

</html>